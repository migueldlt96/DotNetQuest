<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Game Theme Colors -->
    <Color x:Key="PrimaryDark">#1a1a2e</Color>
    <Color x:Key="SecondaryDark">#16213e</Color>
    <Color x:Key="AccentDark">#0f3460</Color>
    <Color x:Key="Primary">#e94560</Color>
    <Color x:Key="Secondary">#533483</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#ffffff</Color>
    <Color x:Key="TextSecondary">#cccccc</Color>
    <Color x:Key="TextMuted">#888888</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#00ff88</Color>
    <Color x:Key="Error">#ff6688</Color>
    <Color x:Key="Warning">#ffd700</Color>
    <Color x:Key="Info">#88ccff</Color>

    <!-- Code Editor -->
    <Color x:Key="CodeBackground">#0a0a15</Color>
    <Color x:Key="CodeText">#00ff88</Color>

</ResourceDictionary>
